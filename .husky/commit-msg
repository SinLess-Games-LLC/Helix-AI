# Define color codes
BLUE="\033[1;34m"
ORANGE="\033[0;33m"
RED="\033[1;31m"
BOLD_RED="\033[1;31m\033[1m"
RESET="\033[0m"

# Logging functions for info, warn, and error
log_info() {
  echo  "${BLUE}INFO:${RESET} $1"
}

log_warn() {
  echo "${ORANGE}WARN:${RESET} $1"
}

log_error() {
  echo "${BOLD_RED}ERROR:${RESET} $1"
}


